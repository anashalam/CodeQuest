<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Text -->
    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CodeQuest Challenges"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- RecyclerView for Challenges -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challengeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainTitle"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

    <!-- Floating Action Button to add new challenges -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Add Challenge"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        android:backgroundTint="#6200EE"
        app:elevation="8dp" />

</RelativeLayout>
